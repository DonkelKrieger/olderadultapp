<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_wifi_app">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="20dp"
                    android:layout_height="81dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/_80b585b2edbce24c47b2488" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WI-FI"
                    android:textColor="#000000"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El siguiente manual se realiza con el propósito de que el adulto mayor pueda conectar su dispositivo tecnológico (celular) a la red Wi-Fi (Internet)."
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ceideul_logo" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/escudo" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="PASOS PARA CONECTAR SU CELULAR AL WI-FI"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.763"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/paso1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arimo"
                        android:text="1- PRIMERA OPCIÓN PARA CONFIGURAR RED"
                        android:textColor="#FF0000"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Esta opción es la más rápida y sencilla. Primero usted deberá deslizar de arriba hacia abajo, para que le aparezca en su pantalla el menú como se ve en la imagen donde esta el símbolo de Wi-Fi. Luego lo mantendrá sostenido este símbolo hasta que lo lleve a otra ventana."
                        android:textColor="#000000"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="514dp"
                        app:srcCompat="@drawable/wifi_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="153dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/_80b585b2edbce24c47b2488" />

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="253dp"
                            android:layout_height="85dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo"
                            android:text="SÍMBOLO DE WI-FI"
                            android:textColor="#FF0000"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/paso2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2- ACTIVAR WI-FI"
                        android:textColor="#FF0000"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Después de realizar el primer paso, si aparece como esta en la imagen, es porque tiene el Wi-Fi apagado, para activarlo deberá oprimir el círculo blanco que se evidencia al lado derecho donde diche WI-FI."
                        android:textColor="#000000"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="320dp"
                        android:layout_height="519dp"
                        app:srcCompat="@drawable/wifi_3" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/paso3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3- IDENTIFICAR Y CONECTARSE AL WI-FI"
                        android:textColor="#FF0000"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Al tener el Wi-Fi activado del dispositivo, aparecerá el menú de todas las redes Wi-Fi las cuales usted podrá conectarse, pero deberá oprimir la cual le indican. (Le deben indicar el nombre de la red y contraseña)."
                        android:textColor="#000000"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/wifi_4" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/paso4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4- COLOCAR CONTRASEÑA DE LA RED WI-FI"
                        android:textColor="#FF0000"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Podemos acceder a dos tipos de red Wi-Fi. 1) Conexiones públicas y no exigen contraseña. 2) Conexiones privadas y SI exigen contraseña. En el caso de utilizar una red Wi-Fi con contraseña, una vez realizado el paso 3, le aparecerá esa ventana en su pantalla, donde digitara la contraseña y luego oprime en donde dice conectar y espera mientras se conecta."
                        android:textColor="#000000"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/wifi_5" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/paso5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5- SABER SI ESTACONECTADO A INTERNET"
                        android:textColor="#FF0000"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Para saber sí el dispositivo quedo conectado a Internet, abajo del nombre de la red aparecerá CONECTADO, y el nombre subrayado."
                        android:textColor="#000000"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/wifi_6" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>